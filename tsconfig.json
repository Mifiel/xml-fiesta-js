{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": "src/",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "types/jsx.d.ts"],
  "exclude": ["node_modules"]
}
